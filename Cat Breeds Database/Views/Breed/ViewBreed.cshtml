@model Breed

<h3>@Model.breed_name Information</h3>

<table class="table">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Origin</th>
        <th>Description</th>
        <th>Average Lifespan</th>
        

    </tr>
    <tr>
        <td>@Model.breed_id</td>
        <td>@Model.breed_name</td>
        <td>@Model.origin</td>
        <td>@Model.description</td>
        <td>@Model.avg_lifespan</td>
        
       
    </tr>
</table>
<div class="text-center">
    <img id="viewimage" src="@Model.image" />
</div>
<section style="display:flex; flex-direction: row; justify-content: space-between; justify-content: center; padding: 25px;">

    <div style="display: block; padding-right: 10px">
        <div style="display: block">
            <form action="/Breed/UpdateBreed/@Model.breed_id" method="get">
                <button class="btn-primary" type="submit">Update this Breed</button>
            </form>
        </div>
    </div>




    @using (Html.BeginForm("DeleteBreed", "Breed", "Post"))
    {
         <form action="/Breed/DeleteBreed" method="post">
            <input type="hidden" asp-for="breed_id" value="@Model.breed_id" />
            
            <input class="btn-danger" type="submit" onclick="return confirm('Are you sure?')" value="Delete this Breed"/>
        </form>

    }
</div>